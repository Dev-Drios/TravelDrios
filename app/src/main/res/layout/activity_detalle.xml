<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#363537"
    tools:context=".detalle.DetalleActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nombre_view"
                android:layout_width="198dp"
                android:layout_height="42dp"
                android:layout_margin="20dp"
                android:fontFamily="serif"
                android:text="@string/Title2"
                android:textColor="#FFFFFF"
                android:textSize="34sp" />

            <ImageView
                android:id="@+id/picture_view"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="10dp"


                android:contentDescription="@string/imagen1" />
            <TextView
                android:id="@+id/label1"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ranking"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/cali_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"

                android:fontFamily="serif"
                android:text=""
                android:textColor="#D2DFDF"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/label2"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calificacion"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/ranking_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:fontFamily="serif"
                android:text=""
                android:textColor="#D2DFDF"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/textView3"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descripcion"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/description_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:fontFamily="serif"
                android:text=""
                android:textColor="#D2DFDF"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/textView4"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comentario"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/coment_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_marginBottom="60dp"
                android:fontFamily="serif"
                android:textColor="#D2DFDF"
                android:textSize="20sp" />








        </LinearLayout>
    </ScrollView>


</LinearLayout>